.post-copyright
  background-color rgba(255, 0, 0, 0)
  .post-copyright-author
    font-style bold
  .post-copyright-link >a,
  .post-copyright-license >a
    display inline-block
    position relative
    border-bottom none
    line-height 2
    vertical-align top
    &::before 
      content ""
      position absolute
      width 100%
      height 2px
      bottom 3px
      left 0
      background-color $blue-bright
      visibility hidden
      transform scaleX(0)
      the-transition()

    &:hover::before 
      visibility visible
      transform scaleX(1)

    &:hover
      background none
      color $gray-lighter
    .fa
      font-size 16px
