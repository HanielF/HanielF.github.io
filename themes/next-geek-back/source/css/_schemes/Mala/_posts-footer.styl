.post-nav-item a:hover
  color $post-nav-color
  font-style bold

.post-nav-item a
  display inline-block
  position relative
  color $post-body-link-color !important
  border-bottom none
  line-height 1.9
  vertical-align top
  &::before 
    content ""
    position absolute
    width 100%
    height 2px
    bottom 3px
    left 0
    background-color $blue-bright
    visibility hidden
    transform scaleX(0)
    the-transition()

  &:hover::before 
    visibility visible
    transform scaleX(1)

  &:hover
    background none
    color $gray-lighter !important
  .fa
    font-size 12px
    color $gray-lighter


.posts-expand .post-tags a:hover
  background none
  color $blue-bright